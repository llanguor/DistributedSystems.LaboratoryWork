<UserControl x:Class="DistributedSystems.LaboratoryWork.Number1.Packages.Controls.MessageDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DistributedSystems.LaboratoryWork.Number1.Packages.Controls"
             xmlns:controls="clr-namespace:DistributedSystems.LaboratoryWork.Number1.Packages.Controls"
             xmlns:attached="clr-namespace:DistributedSystems.LaboratoryWork.Number1.Packages.Attached"
             xmlns:converters="clr-namespace:DistributedSystems.LaboratoryWork.Number1.Packages.Controls.Converters"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:types="clr-namespace:DistributedSystems.LaboratoryWork.Number1.Packages.Controls.Types"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../Packages/Resources/ScrollViewersDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <controls:DialogHost 
            BackgroundOpacity="0.7"
            DialogCornerRadius="20">

            <ScrollViewer
                HorizontalScrollBarVisibility="{Binding ScrollViewerVisible, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}"
                VerticalScrollBarVisibility="{Binding ScrollViewerVisible, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}"
                Margin="0,15,0,15"
                Style="{DynamicResource ResourceKey=ScrollViewerStyle}"
                attached:ScrollViewerTemplateAttachedProperty.ScrollsColor="{Binding ScrollViewerBackground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock 
                        TextWrapping="WrapWithOverflow"
                        Margin="10"
                        Grid.ColumnSpan="2"
                        Grid.Row="0"
                        FontSize="{Binding FontSize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}"
                        Text="{Binding Text, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}" 
                        TextAlignment="Center"/>


                    <Button 
                        Margin="10,10,5,0"
                        Grid.Column="1"
                        Grid.Row="1"
                        Command="{Binding PositiveCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}">
                        <Button.Content>
                            <MultiBinding Converter="{converters:DialogHostTypeConverter}">
                                <MultiBinding.Bindings>
                                    <Binding Path="DialogTypeValue" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}"/>
                                    <Binding>
                                        <Binding.Source>
                                            <system:Boolean>
                                                True
                                            </system:Boolean>
                                        </Binding.Source>
                                    </Binding>
                                </MultiBinding.Bindings>
                            </MultiBinding>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DialogTypeValue, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}" Value="{x:Static types:MessageDialogTypes+DialogType.Ok}">
                                        <Setter Property="Grid.Column" Value="0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button 
                        Margin="10,10,5,0"
                        Grid.Column="0"
                        Grid.Row="1"
                        Command="{Binding NegativeCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}">
                        <Button.Content>
                            <MultiBinding Converter="{converters:DialogHostTypeConverter}">
                                <MultiBinding.Bindings>
                                    <Binding Path="DialogTypeValue" RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}"/>
                                    <Binding>
                                        <Binding.Source>
                                            <system:Boolean>
                                                False
                                            </system:Boolean>
                                        </Binding.Source>
                                    </Binding>
                                </MultiBinding.Bindings>
                            </MultiBinding>
                        </Button.Content>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DialogTypeValue, Mode=OneWay, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=controls:MessageDialog}}" Value="{x:Static types:MessageDialogTypes+DialogType.Ok}">
                                        <Setter Property="Visibility" Value="Hidden"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                </Grid>
            </ScrollViewer>
        </controls:DialogHost>
    </Grid>
</UserControl>
